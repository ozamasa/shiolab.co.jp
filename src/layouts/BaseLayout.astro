---
const { title, description } = Astro.props;

const pageTitle = title ? `${title}` : "SHIOLAB";
const pageDesc =
  description ??
  "SHIOLABは、資格・受験・学校学習などの“4択試験攻略パターン”をわかりやすく解説する学習メディアです。";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDesc} />
    <link
      rel="canonical"
      href={Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.toString()}
    />
    <link rel="icon" href="/favicon.png" type="image/png" />

    <!-- AdSense（審査用。広告ユニットの貼り付けは審査通過後でOK） -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6767052617363894"
      crossorigin="anonymous"
    ></script>

    <style>
      :root {
        --bg: #f7fafc;
        --surface: #ffffff;
        --text: #0b1220;
        --muted: #475569;
        --border: #e2e8f0;

        /* テーマ：学習メディア（信頼感×爽やかさ×強調） */
        --primary: #1d4ed8;    /* 信頼ブルー */
        --accent: #0ea5e9;     /* 透明感 */
        --highlight: #f59e0b;  /* 注意・ポイント */
        --primary-ink: #ffffff;

        --shadow: 0 10px 24px rgba(2, 6, 23, 0.08);
        --shadow-sm: 0 6px 14px rgba(2, 6, 23, 0.06);
        --radius: 18px;
        --radius-sm: 14px;
        --max: 1080px;
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }
      body {
        margin: 0;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial,
          "Noto Sans JP", "Hiragino Kaku Gothic ProN", Meiryo, sans-serif;
        color: var(--text);
        background:
          radial-gradient(1200px 600px at 20% -10%, rgba(14,165,233,.16), transparent 60%),
          radial-gradient(1000px 500px at 100% 0%, rgba(29,78,216,.14), transparent 55%),
          var(--bg);
        line-height: 1.75;
      }

      a { color: var(--primary); text-decoration: none; }
      a:hover { text-decoration: underline; }

      .wrap { max-width: var(--max); margin: 0 auto; padding: 20px 16px 56px; }

      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        padding: 10px 0 16px;
      }

      .brand { display: flex; align-items: center; gap: 10px; min-width: 180px; }
      .logo {
        width: 36px; height: 36px; border-radius: 12px;
        background: var(--primary);
        color: var(--primary-ink);
        display: flex; align-items: center; justify-content: center;
        font-weight: 900;
      }
      .siteTitle { font-weight: 900; letter-spacing: .02em; }

      .nav { display: flex; align-items: center; gap: 10px; flex-wrap: wrap; justify-content: flex-end; }
      .nav a {
        color: var(--muted);
        padding: 8px 10px;
        border-radius: 12px;
      }
      .nav a:hover { background: rgba(29,78,216,.08); text-decoration: none; }

      .cta {
        background: var(--primary);
        color: var(--primary-ink) !important;
        font-weight: 800;
      }

      .main { margin-top: 8px; }

      .card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow-sm);
        padding: 18px;
        transition: box-shadow .2s ease, transform .2s ease, border-color .2s ease;
      }
      .card:hover { box-shadow: var(--shadow); transform: translateY(-1px); border-color: rgba(29,78,216,.25); }

      .grid { display: grid; gap: 14px; grid-template-columns: 1fr; }
      @media (min-width: 760px) { .grid { grid-template-columns: 1fr 1fr; } }

      h1 { font-size: 30px; margin: 0 0 10px; letter-spacing: -.02em; }
      h2 { font-size: 20px; margin: 0; letter-spacing: -.01em; }
      p { margin: 0; color: var(--muted); }

      .footer {
        margin-top: 28px;
        padding-top: 18px;
        border-top: 1px solid var(--border);
        color: #64748b;
        font-size: 13px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
      }
      .footer a { color: #475569; }
      .sep { color: #cbd5e1; }

      /* 記事本文 */
      .prose { color: var(--text); }
      .prose :where(p, ul, ol) { margin: 0.8em 0; }
      .prose :where(h2, h3) { margin: 1.1em 0 0.4em; color: var(--text); }
      .prose :where(code) {
        background: rgba(2,6,23,.06);
        padding: 0.12em 0.35em;
        border-radius: 8px;
        font-size: .95em;
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="header">
        <a class="brand" href="/" aria-label="SHIOLAB トップへ">
          <div class="logo">S</div>
          <div class="siteTitle">SHIOLAB</div>
        </a>

        <nav class="nav" aria-label="グローバルナビゲーション">
          <a href="/articles/">記事一覧</a>
          <a class="cta" href="https://quiz.shiolab.co.jp/">クイズで確認</a>
        </nav>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <a href="/privacy/">プライバシーポリシー</a>
        <span class="sep">｜</span>
        <a href="/terms/">利用規約</a>
        <span class="sep">｜</span>
        <a href="/disclaimer/">免責事項</a>
        <span class="sep">｜</span>
        <span>© SHIOLAB</span>
      </footer>
    </div>
  </body>
</html>
