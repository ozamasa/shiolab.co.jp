      .kicker{display:inline-flex;align-items:center;gap:8px;font-size:12px;font-weight:800;letter-spacing:.08em;text-transform:uppercase;color:color-mix(in srgb, var(--muted), var(--primary) 30%)}
      .divider{height:1px;background:var(--border);margin:16px 0}
      .tag{display:inline-flex;align-items:center;padding:4px 10px;border-radius:999px;background:rgba(245,158,11,.12);border:1px solid rgba(245,158,11,.22);color:#7a4a00;font-weight:800;font-size:12px}
