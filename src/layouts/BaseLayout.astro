---
const { title, description } = Astro.props;
const pageTitle = title ? `${title}` : "SHIOLAB";
const pageDesc =
  description ??
  "SHIOLABは、資格・受験・学校学習などの“4択試験攻略パターン”をわかりやすく解説する学習メディアです。";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDesc} />
    <link rel="canonical" href={Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.toString()} />
    <link rel="icon" href="/favicon.png" type="image/png" />

    <!-- AdSense（審査用。広告ユニットの貼り付けは審査通過後でOK） -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6767052617363894"
      crossorigin="anonymous"
    ></script>

    <style>
      :root{
        --bg:#f6f7fb;
        --surface:#ffffff;
        --text:#0f172a;
        --muted:#475569;
        --border:#e2e8f0;
        --primary:#2563eb;
        --primary-ink:#ffffff;
        --shadow: 0 10px 30px rgba(15,23,42,.08);
        --radius:18px;
        --max: 1040px;
      }
      *{box-sizing:border-box}
      body{
        margin:0;
        font-family: system-ui, -apple-system, "Segoe UI", sans-serif;
        background:var(--bg);
        color:var(--text);
        line-height:1.7;
      }
      a{ color:var(--primary); text-decoration:none; }
      a:hover{ text-decoration:underline; }
      .wrap{ max-width:var(--max); margin:0 auto; padding: 20px 16px 56px; }
      .header{
        display:flex; align-items:center; justify-content:space-between; gap:12px;
        padding:10px 0 16px;
      }
      .brand{ display:flex; align-items:center; gap:10px; min-width: 180px; }
      .logo{
        width:36px; height:36px; border-radius:12px;
        background:var(--primary); color:var(--primary-ink);
        display:flex; align-items:center; justify-content:center;
        font-weight:900;
      }
      .siteTitle{ font-weight:900; letter-spacing:.02em; }
      .nav{
        display:flex; align-items:center; gap:10px; flex-wrap:wrap;
        justify-content:flex-end;
      }
      .nav a{
        color:var(--muted);
        padding:8px 10px;
        border-radius:12px;
      }
      .nav a:hover{ background: rgba(37,99,235,.08); text-decoration:none; }
      .cta{
        background:var(--primary);
        color:var(--primary-ink) !important;
        font-weight:800;
      }
      .cta:hover{ background:#1d4ed8; }
      .main{ margin-top: 8px; }
      .card{
        background:var(--surface);
        border:1px solid var(--border);
        border-radius: var(--radius);
        padding: 18px;
        box-shadow: var(--shadow);
      }
      .card + .card{ margin-top: 14px; }
      .hero{
        padding: 20px;
      }
      .hero h1{
        margin:0 0 8px;
        font-size: 28px;
        line-height:1.25;
        letter-spacing:-.02em;
      }
      .hero p{ margin:0; color: var(--muted); }
      .btnRow{ display:flex; gap:10px; flex-wrap:wrap; margin-top: 14px; }
      .btn{
        display:inline-flex; align-items:center; justify-content:center;
        padding: 11px 14px;
        border-radius: 14px;
        border:1px solid var(--border);
        background: var(--surface);
        color: var(--text);
        font-weight: 800;
      }
      .btn.primary{
        background: var(--primary);
        border-color: transparent;
        color: var(--primary-ink);
      }
      .btn.primary:hover{ background:#1d4ed8; text-decoration:none; }
      .btn.ghost:hover{ background: rgba(15,23,42,.04); text-decoration:none; }
      h2{
        margin: 28px 0 12px;
        font-size: 18px;
        letter-spacing:-.01em;
      }
      .grid{
        display:grid;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        gap: 14px;
      }
      @media (min-width: 760px){
        .grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); gap: 16px; }
      }
      @media (min-width: 1020px){
        .grid.three{ grid-template-columns: repeat(3, minmax(0, 1fr)); }
      }
      .meta{
        display:flex; gap:10px; flex-wrap:wrap;
        font-size:12px; color: var(--muted);
        margin-top: 10px;
      }
      .pill{
        display:inline-flex; align-items:center;
        padding: 5px 10px;
        border-radius: 999px;
        background: rgba(37,99,235,.08);
        color: #1e40af;
        font-weight: 800;
      }
      .prose{
        color: var(--text);
        line-height: 1.9;
        font-size: 16px;
      }
      .prose :global(h2){ margin-top: 26px; }
      .prose :global(h3){ margin-top: 18px; }
      .prose :global(p){ margin: 0 0 14px; }
      .prose :global(ul), .prose :global(ol){ padding-left: 22px; margin: 0 0 14px; }
      .prose :global(code){ background: rgba(15,23,42,.06); padding: 2px 6px; border-radius: 8px; }
      .divider{ height:1px; background: var(--border); margin: 22px 0; }
      footer{
        margin-top: 36px;
        padding-top: 18px;
        border-top: 1px solid var(--border);
        color: var(--muted);
        font-size: 13px;
        display:flex;
        gap: 10px;
        flex-wrap:wrap;
        justify-content:space-between;
        align-items:center;
      }
      .footLinks{ display:flex; gap: 12px; flex-wrap:wrap; }
      .footLinks a{ color: var(--muted); }
      .footLinks a:hover{ color: var(--text); text-decoration:none; }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="header">
        <a class="brand" href="/" aria-label="SHIOLAB トップへ">
          <div class="logo">S</div>
          <div class="siteTitle">SHIOLAB</div>
        </a>

        <nav class="nav" aria-label="グローバルナビ">
          <a href="/articles/">記事</a>
          <a href="/#categories">カテゴリ</a>
          <a class="cta" href="https://quiz.shiolab.co.jp/">クイズで確認</a>
        </nav>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer>
        <div class="footLinks">
          <a href="/privacy/">プライバシーポリシー</a>
          <a href="/terms/">利用規約</a>
          <a href="/disclaimer/">免責事項</a>
        </div>
        <div>© SHIOLAB</div>
      </footer>
    </div>
  </body>
</html>
