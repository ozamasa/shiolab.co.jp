---
const { title = "LOGICLAB", description = "", canonical = undefined } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    {description ? <meta name="description" content={description} /> : null}
    {canonical ? <link rel="canonical" href={canonical} /> : null}
  </head>
  <body>
    <header class="siteHeader">
      <div class="headerInner">
        <a href="/" class="logo">LOGICLAB</a>

        <nav class="mainNav">
          <a href="/articles/">記事</a>
          <a href="/quiz/">クイズ</a>
          <a href="/about/">このサイトについて</a>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer class="footer">
      <div class="wrap footerInner">
        <div>
          <div class="footerBrand"></div>
          <div class="footerDesc">4択問題を「切り方」で整理する学習サイト</div>
          <div class="footerCopy">© {new Date().getFullYear()} LOGICLAB</div>
        </div>
        <div class="footerLinks">
          <a href="/privacy/">プライバシーポリシー</a>
          <a href="/terms/">利用規約</a>
          <a href="/disclaimer/">免責事項</a>
        </div>
      </div>
    </footer>
  </body>
</html>
