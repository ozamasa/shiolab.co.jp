---
// src/layouts/BaseLayout.astro
type Props = {
  title?: string;
  description?: string;
};

const {
  title = "SHIOLAB｜学習の攻略パターンメディア",
  description = "資格試験・受験・学校学習の“4択攻略パターン”を、短く分かりやすく解説します。",
} = Astro.props as Props;

const canonical = new URL(Astro.url.pathname, Astro.site ?? Astro.url.origin).toString();
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <link rel="icon" href="/favicon.png" type="image/png" />

    <!-- AdSense（審査用。ユニット配置は審査通過後でOK） -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6767052617363894"
      crossorigin="anonymous"
    ></script>

    <style>
    :root{
      --bg: #0b1020;
      --bg2:#0f172a;
      --card:#0b1224;
      --card2:#0f1a33;
      --text:#e5e7eb;
      --muted:#aab4c4;
      --border: rgba(255,255,255,.10);
      --accent:#60a5fa;
      --accent2:#22c55e;
      --shadow: 0 10px 30px rgba(0,0,0,.35);
    }

    @media (prefers-color-scheme: dark){
      :root{
      --bg: #0b1020;
      --bg2:#0f172a;
      --card:#0b1224;
      --card2:#0f1a33;
      --text:#e5e7eb;
      --muted:#aab4c4;
      --border: rgba(255,255,255,.10);
      --accent:#60a5fa;
      --accent2:#22c55e;
      --shadow: 0 10px 30px rgba(0,0,0,.35);
    }
      a{ color: color-mix(in srgb, var(--brand-2) 70%, #fff); }
    }

    html, body{
      margin:0;
      font-family: system-ui, -apple-system, "Segoe UI", sans-serif;
      background:
        radial-gradient(1200px 600px at 20% -10%, rgba(96,165,250,.22), transparent 60%),
        radial-gradient(900px 500px at 85% 0%, rgba(34,197,94,.16), transparent 55%),
        linear-gradient(180deg, var(--bg), var(--bg2));
      color: var(--text);
    }
    body{
      margin:0;
      font-family: system-ui, -apple-system, "Segoe UI", sans-serif;
      background:
        radial-gradient(1200px 600px at 20% -10%, rgba(96,165,250,.22), transparent 60%),
        radial-gradient(900px 500px at 85% 0%, rgba(34,197,94,.16), transparent 55%),
        linear-gradient(180deg, var(--bg), var(--bg2));
      color: var(--text);
    }

    a{ color: var(--brand); text-decoration: none; }
    a:hover{ text-decoration: underline; }

    .wrap{ max-width: 1040px; margin:0 auto; padding: 28px 16px 56px; }

    /* Header */
    .header{
      display:flex; justify-content:space-between; align-items:center; gap:16px;
      padding: 16px 18px;
      border: 1px solid var(--border);
      border-radius: 18px;
      background: rgba(15,23,42,.55);
      box-shadow: 0 8px 24px rgba(0,0,0,.22);
      backdrop-filter: blur(10px);
      margin-bottom: 22px;
    }
    .headerInner{
      max-width: 1040px;
      margin: 0 auto;
      padding: 14px 16px;
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap: 12px;
    }
    .brand{
      display:flex;
      align-items:center;
      gap:10px;
      min-width: 0;
    }
    .logo{
      width: 36px;
      height: 36px;
      border-radius: 12px;
      display:inline-flex;
      align-items:center;
      justify-content:center;
      font-weight: 900;
      color:#fff;
      background: linear-gradient(135deg, var(--brand), var(--brand-2));
      box-shadow: var(--shadow-sm);
      flex: 0 0 auto;
    }
    .siteTitle{
      font-weight: 900;
      letter-spacing: .2px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .nav{
      display:flex;
      flex-wrap: wrap;
      gap: 10px 14px;
      justify-content: flex-end;
      align-items:center;
      font-size: 14px;
      color: var(--muted);
      line-height: 1.2;
      max-width: 68%;
    }
    .nav a{ color: var(--muted); }
    .nav a{ padding: 6px 10px; border-radius: 999px; }
    .nav a:hover{ color: var(--text); text-decoration: none; background: color-mix(in srgb, var(--surface) 65%, transparent); }
    .nav a.primary{ color: var(--text); font-weight: 800; background: color-mix(in srgb, var(--surface) 70%, transparent); border: 1px solid var(--line); }

    /* Common UI */
    .card{
      background: linear-gradient(180deg, rgba(15,26,51,.85), rgba(11,18,36,.85));
      border: 1px solid var(--border);
      border-radius: 18px;
      padding: 22px;
      box-shadow: var(--shadow);
    }

    .btnRow{
      display:flex;
      flex-wrap:wrap;
      gap: 10px;
      margin-top: 12px;
    }
    .btn{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      gap: 8px;
      padding: 10px 12px;
      border-radius: 14px;
      font-weight: 800;
      border: 1px solid var(--line);
      background: color-mix(in srgb, var(--surface) 70%, transparent);
      color: var(--text);
      box-shadow: var(--shadow-sm);
      text-decoration:none;
    }
    .btn:hover{ text-decoration:none; transform: translateY(-1px); }
    .btn.primary{
      background: linear-gradient(135deg, var(--brand), var(--brand-2));
      border-color: transparent;
      color: #fff;
    }

    .badges{
      display:flex;
      gap: 8px;
      flex-wrap: wrap;
      align-items:center;
      margin-top: 10px;
      color: var(--muted);
      font-size: 12px;
    }
    .badge{
      display:inline-flex;
      align-items:center;
      padding: 4px 10px;
      border-radius: 999px;
      border: 1px solid var(--line);
      background: color-mix(in srgb, var(--surface) 70%, transparent);
      color: var(--muted);
    }
.grid{ display:grid; grid-template-columns: 1fr; gap: 18px; }
    @media (min-width: 860px){
      .grid{ grid-template-columns: 1fr 1fr; gap: 20px; }
      .grid.grid--3{ grid-template-columns: 1fr 1fr 1fr; }
    }
    }

    h1, h2, h3{
      line-height: 1.25;
      letter-spacing: -0.2px;
    }
    h1{ font-size: clamp(26px, 3.4vw, 36px); margin: 0 0 10px; }
    h2{ font-size: 18px; margin: 0 0 10px; }
    p{ margin: 0 0 12px; color: color-mix(in srgb, var(--text) 86%, var(--muted)); line-height: 1.85; }
    .muted{ color: var(--muted); }

    .prose :global(p){ margin: 0 0 14px; }
    .prose :global(ul){ margin: 10px 0 14px; padding-left: 20px; }
    .prose :global(li){ margin: 6px 0; }
    .prose :global(h2){ margin-top: 22px; }
    .prose :global(code){
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: .95em;
      padding: 0.15em 0.35em;
      border-radius: 8px;
      border: 1px solid var(--line);
      background: color-mix(in srgb, var(--surface) 85%, transparent);
    }

    /* Footer */
    .footer{
      margin-top: 44px;
      padding: 18px 10px 0;
      border-top: 1px solid rgba(255,255,255,.10);
      color: var(--muted);
      font-size: 13px;
      display:flex; justify-content:space-between; gap:12px; flex-wrap:wrap;
    }
    .footer a{ color: var(--muted); }
    .footer a:hover{ color: var(--text); text-decoration:none; }
    .footerNav{
      display:flex;
      flex-wrap: wrap;
      gap: 10px 14px;
      justify-content:center;
      margin-bottom: 10px;
    }
  
/* ---- UI polish (spacing & hierarchy) ---- */
.wrap{ max-width: 1040px; margin:0 auto; padding: 28px 16px 56px; }
main{display:block;}
.section{margin-top:34px;}
.sectionHead{margin-bottom:14px;}
.sectionTitle{ font-size: 18px; margin: 0 0 14px; letter-spacing:.02em; }
.sectionSub{margin:0;color:var(--muted);font-size:14px;line-height:1.7;}
.grid{ display:grid; grid-template-columns: 1fr; gap: 18px; }
.grid--tight{gap:14px;}
.card{
      background: linear-gradient(180deg, rgba(15,26,51,.85), rgba(11,18,36,.85));
      border: 1px solid var(--border);
      border-radius: 18px;
      padding: 22px;
      box-shadow: var(--shadow);
    }
.cardTitle{margin:0 0 10px;font-size:18px;line-height:1.3;letter-spacing:-.01em;}
.cardDesc{margin:0;color:var(--muted);font-size:14px;line-height:1.75;}
.meta{ display:flex; flex-wrap:wrap; gap: 8px; margin-top: 14px; }
.pill{
      display:inline-flex; align-items:center; gap:6px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,.14);
      color: var(--text);
      font-size: 12px;
      background: rgba(255,255,255,.06);
    }
.pill--muted{ color: var(--muted); background: rgba(255,255,255,.04); }
.hero{padding:28px;border-radius:22px;margin-bottom:26px;}
.heroInner{display:grid;gap:20px;grid-template-columns:1fr;}
@media (min-width: 860px){
      .grid{ grid-template-columns: 1fr 1fr; gap: 20px; }
      .grid.grid--3{ grid-template-columns: 1fr 1fr 1fr; }
    }}
.kicker{margin:0 0 8px;color:var(--muted);font-size:13px;letter-spacing:.08em;text-transform:uppercase;}
.lead{font-size:16px;line-height:1.85;margin:12px 0 0;}
.heroActions{display:flex;flex-wrap:wrap;gap:10px;margin-top:16px;}
.heroSide{display:flex;}
.heroBox{border:1px solid var(--border);background:rgba(255,255,255,.02);border-radius:18px;padding:18px;flex:1;}
.heroBoxTitle{margin:0 0 10px;font-size:16px;}
.heroList{margin:0;padding-left:18px;color:var(--muted);line-height:1.9;}
.moreLink{margin:14px 0 0;}
.linkArrow{display:inline-flex;align-items:center;gap:8px;font-weight:700;}
.linkArrow::after{content:"→";opacity:.85;}
footer{margin-top:46px;}

</style>
  </head>

  <body>
    <div class="wrap">
      <header class="header">
      <div class="headerInner">
        <div class="brand">
          <a href="/" aria-label="SHIOLAB ホーム" style="display:flex;align-items:center;gap:10px;color:inherit;text-decoration:none;">
            <div class="logo">S</div>
            <div>
              <div class="siteTitle">SHIOLAB</div>
              <div class="muted" style="font-size:12px;margin-top:2px;">4択攻略パターンを、短く分かりやすく</div>
            </div>
          </a>
        </div>
        <nav class="nav" aria-label="サイト内ナビゲーション">
          <a href="/" class={Astro.url.pathname === "/" ? "primary" : ""}>トップ</a>
          <a href="/articles/" class={Astro.url.pathname.startsWith("/articles") ? "primary" : ""}>記事</a>
          <a href="https://quiz.shiolab.co.jp/" target="_blank" rel="noopener">クイズ</a>
          <a href="/guide/" class={Astro.url.pathname.startsWith("/guide") ? "primary" : ""}>使い方</a>
</nav>
      </div>
    </header>

      <main>
        <slot />
      </main>

      <footer class="footer">
      <nav class="footerNav" aria-label="フッターナビゲーション">
        <a href="/privacy/">プライバシーポリシー</a>
        <a href="/terms/">利用規約</a>
        <a href="/about/">このサイトについて</a>
        <a href="/disclaimer/">免責事項</a>
      </nav>
      <div>© SHIOLAB</div>
    </footer>
    </div>
  </body>
</html>