---
// src/layouts/BaseLayout.astro
type Props = {
  title?: string;
  description?: string;
};

const {
  title = "SHIOLAB｜学習の攻略パターンメディア",
  description = "資格試験・受験・学校学習の“4択攻略パターン”を、短く分かりやすく解説します。",
} = Astro.props as Props;

const canonical = new URL(Astro.url.pathname, Astro.site ?? Astro.url.origin).toString();
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <link rel="icon" href="/favicon.png" type="image/png" />

    <!-- AdSense（審査用。ユニット配置は審査通過後でOK） -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6767052617363894"
      crossorigin="anonymous"
    ></script>

    <style>
      :root{
        /* ニュートラル（学習向け） */
        --bg: #f7f8fb;
        --panel: #ffffff;
        --text: #0f172a;
        --muted: #475569;
        --border: #e5e7eb;

        /* アクセント（淡いネイビー寄り） */
        --accent: #1d4ed8;
        --accent2: #0ea5e9;

        --radius: 16px;
        --shadow: 0 10px 30px rgba(2, 6, 23, .06);
        --shadow2: 0 6px 18px rgba(2, 6, 23, .06);
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }
      body{
        margin:0;
        font-family: system-ui, -apple-system, "Segoe UI", "Noto Sans JP", sans-serif;
        background: var(--bg);
        color: var(--text);
      }
      a{ color: var(--accent); text-decoration: none; }
      a:hover{ text-decoration: underline; }

      .wrap{
        max-width: 1024px;
        margin: 0 auto;
        padding: 26px 16px 56px;
      }

      /* Header */
      .header{
        display:flex;
        justify-content: space-between;
        align-items:center;
        gap: 16px;
        padding: 14px 16px;
        background: rgba(255,255,255,.72);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow2);
        backdrop-filter: blur(8px);
      }
      .brand{
        display:flex; align-items:center; gap:12px;
        min-width: 200px;
      }
      .logo{
        width: 36px; height: 36px;
        border-radius: 12px;
        display:grid; place-items:center;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
        color: #fff;
        font-weight: 900;
        letter-spacing: .02em;
      }
      .brandText{
        display:flex; flex-direction: column;
        line-height: 1.1;
      }
      .siteName{
        font-size: 16px;
        font-weight: 900;
        letter-spacing: .02em;
      }
      .tagline{
        font-size: 12px;
        color: var(--muted);
        margin-top: 3px;
      }

      .nav{
        display:flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: flex-end;
      }
      .nav a{
        font-size: 13px;
        color: var(--text);
        background: #ffffff;
        border: 1px solid var(--border);
        padding: 8px 10px;
        border-radius: 999px;
        box-shadow: 0 1px 0 rgba(2,6,23,.03);
      }
      .nav a:hover{
        text-decoration: none;
        border-color: rgba(29,78,216,.35);
        box-shadow: 0 10px 22px rgba(29,78,216,.10);
      }
      .nav a.primary{
        color: #fff;
        border: none;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
      }

      /* Main */
      main{
        margin-top: 16px;
      }

      .card{
        background: var(--panel);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 18px;
        box-shadow: var(--shadow);
      }

      h1{ font-size: 28px; margin: 0 0 10px; letter-spacing: -.01em; }
      h2{ font-size: 18px; margin: 28px 0 12px; letter-spacing: -.01em; }
      h3{ font-size: 16px; margin: 0 0 10px; }

      p, li{
        line-height: 1.85;
        color: var(--muted);
      }

      .grid{
        display:grid;
        gap: 12px;
        grid-template-columns: 1fr;
      }
      @media (min-width: 820px){
        .grid{ grid-template-columns: 1fr 1fr; }
      }

      .meta{
        font-size: 12px;
        color: #64748b;
        display:flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 10px;
      }

      .pill{
        display:inline-flex;
        align-items:center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: #f8fafc;
        color: #334155;
      }

      /* Prose (article body) */
      .prose{
        color: var(--text);
      }
      .prose :global(p),
      .prose :global(li){
        color: #334155;
      }
      .prose :global(h2){
        margin-top: 26px;
      }
      .prose :global(a){
        color: var(--accent);
      }
      .prose :global(code){
        background: #f1f5f9;
        border: 1px solid var(--border);
        padding: 2px 6px;
        border-radius: 8px;
        font-size: .95em;
      }

      /* Footer */
      .footer{
        margin-top: 26px;
        padding: 16px;
        border-radius: var(--radius);
        border: 1px solid var(--border);
        background: rgba(255,255,255,.72);
        box-shadow: var(--shadow2);
        color: #64748b;
        font-size: 13px;
        display:flex;
        flex-direction: column;
        gap: 10px;
      }
      .footerLinks{
        display:flex;
        gap: 10px;
        flex-wrap: wrap;
      }
      .footerLinks a{
        color: #334155;
        background: #ffffff;
        border: 1px solid var(--border);
        padding: 8px 10px;
        border-radius: 999px;
      }
      .footerLinks a:hover{ text-decoration: none; border-color: rgba(29,78,216,.35); }
      .copy{
        color: #64748b;
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="header">
        <div class="brand">
          <div class="logo">S</div>
          <div class="brandText">
            <div class="siteName">SHIOLAB</div>
            <div class="tagline">4択攻略パターンを、短く分かりやすく</div>
          </div>
        </div>

        <nav class="nav" aria-label="主要メニュー">
          <a class="primary" href="/articles/">記事</a>
          <a href="/quiz/">クイズ</a>
          <a href="/guide/">使い方</a>
          <a href="/about/">このサイトについて</a>
          <a href="/contact/">お問い合わせ</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer class="footer">
        <div class="footerLinks">
          <a href="/privacy/">プライバシーポリシー</a>
          <a href="/terms/">利用規約</a>
          <a href="/disclaimer/">免責事項</a>
          <a href="/contact/">お問い合わせ</a>
        </div>
        <div class="copy">© SHIOLAB</div>
      </footer>
    </div>
  </body>
</html>