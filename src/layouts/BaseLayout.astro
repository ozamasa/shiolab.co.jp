---
const {
  title = "SHIOLAB",
  description = "資格・受験・学習の攻略パターンをまとめる学習メディア。",
} = Astro.props;

const canonical = Astro.url?.toString?.() ?? "";
---

<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8" />
  <title>{title}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  {canonical ? <link rel="canonical" href={canonical} /> : null}

  <!-- OG（最低限） -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  {canonical ? <meta property="og:url" content={canonical} /> : null}

  <style>
    :root { --primary:#2563eb; --bg:#f6f7fb; --border:#e5e7eb; --text:#111; --muted:#666; }
    body{margin:0;font-family:system-ui,-apple-system,"Segoe UI",sans-serif;background:var(--bg);color:var(--text)}
    .wrap{max-width:980px;margin:0 auto;padding:22px 16px 40px}
    .header{display:flex;align-items:center;justify-content:space-between;gap:12px;margin-bottom:16px}
    .brand{display:flex;align-items:center;gap:10px;text-decoration:none;color:inherit}
    .logo{width:34px;height:34px;border-radius:10px;background:var(--primary);color:#fff;display:inline-flex;align-items:center;justify-content:center;font-weight:900}
    .site{font-weight:900}
    .nav{display:flex;gap:12px;flex-wrap:wrap;font-size:14px}
    .nav a{color:var(--primary);text-decoration:none}
    .nav a:hover{text-decoration:underline}

    .card{background:#fff;padding:18px;border-radius:16px;border:1px solid var(--border);box-shadow:0 2px 10px rgba(0,0,0,.04)}
    .grid{display:grid;gap:14px}
    @media(min-width:760px){.grid{grid-template-columns:1fr 1fr}}
    h1{margin:0 0 12px}
    h2{margin:28px 0 10px}
    p,li{line-height:1.85;color:#333}
    a{color:var(--primary);text-decoration:none}
    a:hover{text-decoration:underline}

    .site-header{
      position: sticky;
      top: 0;
      z-index: 20;
      background: rgba(246,247,251,.9);
      backdrop-filter: blur(6px);
      border-bottom: 1px solid #e5e7eb;
    }

    .header-inner{
      max-width: 960px;
      margin: 0 auto;
      padding: 14px 16px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 14px;
    }

    .brand{
      display: inline-flex;
      align-items: center;
      gap: 10px;
      text-decoration: none;
      color: #111;
      font-weight: 900;
    }

    .brand-mark{
      width: 34px;
      height: 34px;
      border-radius: 10px;
      background: #2563eb;
      color: #fff;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 900;
    }

    .brand-name{
      font-size: 16px;
      letter-spacing: .2px;
    }

    .header-nav{
      display: inline-flex;
      align-items: center;
      gap: 12px;
      flex-wrap: wrap;
    }

    .header-nav a{
      color: #444;
      text-decoration: none;
      font-size: 14px;
      padding: 8px 10px;
      border-radius: 10px;
    }

    .header-nav a:hover{
      background: #eef2ff;
    }

    .nav-cta{
      background: #2563eb;
      color: #fff !important;
      font-weight: 800;
    }

    .nav-cta:hover{
      filter: brightness(.95);
    }

    @media (max-width: 520px){
      .brand-name{ display:none; }
      .header-nav{ gap: 8px; }
    }

    footer{margin-top:28px;padding-top:16px;border-top:1px solid var(--border);font-size:13px;color:var(--muted);text-align:center}
    footer a{color:#555}
    .sep{margin:0 6px;color:#bbb}

    .site-footer {
      margin-top: 60px;
      padding: 40px 20px;
      background: #f8fafc;
      border-top: 1px solid #e5e7eb;
    }

    .footer-inner {
      max-width: 960px;
      margin: 0 auto;
      text-align: center;
    }

    .footer-links {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 16px;
      margin-bottom: 20px;
      font-size: 14px;
    }

    .footer-links a {
      color: #555;
      text-decoration: none;
    }

    .footer-links a:hover {
      text-decoration: underline;
    }

    .copyright {
      font-size: 13px;
      color: #888;
      margin: 0;
    }
  </style>
</head>

<body>
  <div class="wrap">
    <header class="site-header">
      <div class="header-inner">
        <a class="brand" href="/">
          <span class="brand-mark">S</span>
          <span class="brand-name">SHIOLAB</span>
        </a>

        <nav class="header-nav" aria-label="主要ナビゲーション">
          <a href="/articles/">記事</a>
          <a href="/about/">このサイトについて</a>
          <a class="nav-cta" href="https://quiz.shiolab.co.jp/" rel="noopener noreferrer">
            クイズ
          </a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="footer-inner">
        <nav class="footer-links">
          <a href="/articles/">記事一覧</a>
          <a href="/about/">このサイトについて</a>
          <a href="/privacy/">プライバシーポリシー</a>
          <a href="/terms/">利用規約</a>
          <a href="/disclaimer/">免責事項</a>
          <a href="/contact/">お問い合わせ</a>
        </nav>

        <p class="copyright">
          © {new Date().getFullYear()} SHIOLAB
        </p>
      </div>
    </footer>
  </div>
</body>
</html>