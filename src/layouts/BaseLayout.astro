---
const { title, description } = Astro.props;
const pageTitle = title ? `${title}` : "SHIOLAB";
const pageDesc =
  description ??
  "SHIOLABは、資格・受験・学校学習などの“4択試験攻略パターン”をわかりやすく解説する学習メディアです。";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDesc} />
    <link rel="canonical" href={Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.toString()} />
    <link rel="icon" href="/favicon.png" type="image/png" />

    <!-- AdSense（審査用。広告ユニットの貼り付けは審査通過後でOK） -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6767052617363894"
      crossorigin="anonymous"
    ></script>

    <style>
      :root{
        --bg:#f7fafc;
        --surface:#ffffff;
        --text:#0b1220;
        --muted:#475569;
        --border:#e2e8f0;
        --primary:#1d4ed8;      /* 信頼感のあるブルー */
        --accent:#0ea5e9;       /* 学習の爽やかさ */
        --highlight:#f59e0b;    /* 注意点の強調 */
        --primary-ink:#ffffff;
        --shadow: 0 10px 24px rgba(2,6,23,.08);
        --shadow-sm: 0 6px 14px rgba(2,6,23,.06);
        --radius:18px;
        --radius-sm:14px;
        --max: 1080px;
      }
      *{box-sizing:border-box}
      body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,"Noto Sans JP","Hiragino Kaku Gothic ProN",Meiryo,sans-serif;color:var(--text);background:radial-gradient(1200px 600px at 20% -10%, rgba(14,165,233,.16), transparent 60%),radial-gradient(1000px 500px at 100% 0%, rgba(29,78,216,.14), transparent 55%),var(--bg);
        color:var(--text);
        line-height:1.7;
      }
      a{ color:var(--primary); text-decoration:none; }
      a:hover{ text-decoration:underline; }
      .wrap{ max-width:var(--max); margin:0 auto; padding: 20px 16px 56px; }
      .header{
        display:flex; align-items:center; justify-content:space-between; gap:12px;
        padding:10px 0 16px;
      }
      .brand{ display:flex; align-items:center; gap:10px; min-width: 180px; }
      .logo{
        width:36px; height:36px; border-radius:12px;
        background:var(--primary); color:var(--primary-ink);
        display:flex; align-items:center; justify-content:center;
        font-weight:900;
      }
      .siteTitle{ font-weight:900; letter-spacing:.02em; }
      .nav{
        display:flex; align-items:center; gap:10px; flex-wrap:wrap;
        justify-content:flex-end;
      }
      .nav a{
        color:var(--muted);
        padding:8px 10px;
        border-radius:12px;
      }
      .nav a:hover{ background: rgba(37,99,235,.08); text-decoration:none; }
      .cta{
        background:var(--primary);
        color:var(--primary-ink) !important;
        font-weight:800;
      }
      .cta:hover{ background:#1d4ed8; }
      .main{ margin-top: 8px; }
      .card{background:var(--surface);border:1px solid var(--border);border-radius:var(--radius);box-shadow:var(--shadow-sm);padding:18px;}
      .card{transition:box-shadow .2s ease, transform .2s ease, border-color .2s ease}
      .card:hover{box-shadow:var(--shadow);transform:translateY(-1px);border-color:color-mix(in srgb, var(--border), var(--primary) 25%)}
      .card + .card{ margin-top: 14px; }
      .hero{position:relative;overflow:hidden;padding:22px;border-radius:calc(var(--radius) + 6px);background:linear-gradient(135deg, rgba(29,78,216,.10), rgba(14,165,233,.10));border:1px solid color-mix(in srgb, var(--border), var(--primary) 18%);}
      .hero:before{content:"";position:absolute;inset:-40px -60px auto auto;width:260px;height:260px;background:radial-gradient(circle at 30% 30%, rgba(245,158,11,.22), transparent 55%),radial-gradient(circle at 60% 60%, rgba(14,165,233,.22), transparent 60%);filter:blur(0px);pointer-events:none;}
      .hero:after{content:"";position:absolute;inset:auto -70px -90px auto;width:340px;height:340px;background:radial-gradient(circle at 40% 40%, rgba(29,78,216,.18), transparent 60%);pointer-events:none;}
      .hero > *{position:relative;}

      .hero:before{
        content:"";
        position:absolute;
        inset:-120px -120px auto auto;
        width: 380px;
        height: 380px;
        background: radial-gradient(circle at 30% 30%, rgba(37,99,235,.20), rgba(37,99,235,0) 60%);
        pointer-events:none;
      }
      .heroGrid{
        display:grid;
        grid-template-columns: 1fr;
        gap: 14px;
      }
      @media (min-width: 860px){
        .heroGrid{ grid-template-columns: 1.2fr .8fr; align-items: start; }
      }
      .hero h1{font-size:34px;line-height:1.15;margin:0 0 10px;letter-spacing:-.02em}
      .hero p{ margin:0; color: var(--muted); }
      .heroKicker{
        display:inline-flex;
        align-items:center;
        gap:8px;
        font-size:12px;
        font-weight:900;
        letter-spacing:.06em;
        color:#1e40af;
        background: rgba(37,99,235,.08);
        border: 1px solid rgba(37,99,235,.14);
        padding: 6px 10px;
        border-radius: 999px;
        margin-bottom: 10px;
      }
      .heroAside{
        background: rgba(15,23,42,.03);
        border: 1px solid rgba(15,23,42,.06);
        border-radius: 16px;
        padding: 14px;
      }
      .heroAside h3{ margin:0 0 8px; font-size:14px; }
      .heroAside ul{ margin:0; padding-left: 18px; color: var(--muted); }
      .heroAside li{ margin: 6px 0; }
      .btnRow{ display:flex; gap:10px; flex-wrap:wrap; margin-top: 14px; }
      .btn{display:inline-flex;align-items:center;justify-content:center;gap:8px;padding:11px 14px;border-radius:14px;background:var(--primary);color:var(--primary-ink);font-weight:800;letter-spacing:.01em;border:1px solid color-mix(in srgb, var(--primary), #000 8%);box-shadow:0 10px 18px rgba(29,78,216,.18);}
      .btn.primary{
        background: var(--primary);
        border-color: transparent;
        color: var(--primary-ink);
      }
      .btn.primary:hover{ background:#1d4ed8; text-decoration:none; }
      .btn.ghost:hover{ background: rgba(15,23,42,.04); text-decoration:none; }
      h2{font-size:20px;margin:0;letter-spacing:-.01em}
      .sectionHead{display:flex;align-items:baseline;justify-content:space-between;gap:14px;margin:28px 0 12px;}
      .sectionHead h2{ margin: 0; }
      .sectionHead a{ font-size: 13px; color: var(--muted); font-weight: 800; }
      .sectionHead a:hover{ color: var(--text); text-decoration:none; }
      .grid{
        display:grid;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        gap: 14px;
      }
      @media (min-width: 760px){
        .grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); gap: 16px; }
      }
      @media (min-width: 1020px){
        .grid.three{ grid-template-columns: repeat(3, minmax(0, 1fr)); }
      }
      .meta{
        display:flex; gap:10px; flex-wrap:wrap;
        font-size:12px; color: var(--muted);
        margin-top: 10px;
      }
      .pill{
        display:inline-flex; align-items:center;
        padding: 5px 10px;
        border-radius: 999px;
        background: rgba(37,99,235,.08);
        color: #1e40af;
        font-weight: 800;
      }
      .pill a{ color: inherit; text-decoration: none; }
      .pill a:hover{ text-decoration: underline; }
      .chipRow{ display:flex; gap:8px; flex-wrap:wrap; }
      .chip{display:inline-flex;align-items:center;gap:6px;padding:7px 10px;border-radius:999px;border:1px solid color-mix(in srgb, var(--border), var(--primary) 20%);background:linear-gradient(180deg, rgba(255,255,255,.85), rgba(248,250,252,.85));color:var(--text);font-weight:700;font-size:12px;}
      .chip:hover{ text-decoration:none; border-color: rgba(37,99,235,.35); }
      .chip small{ font-weight: 800; color: var(--muted); }
      .prose{
        color: var(--text);
        line-height: 1.9;
        font-size: 16px;
      }
      .prose :global(h2){ margin-top: 26px; }
      .prose :global(h3){ margin-top: 18px; }
      .prose :global(p){ margin: 0 0 14px; }
      .prose :global(ul), .prose :global(ol){ padding-left: 22px; margin: 0 0 14px; }
      .prose :global(code){ background: rgba(15,23,42,.06); padding: 2px 6px; border-radius: 8px; }
      .divider{ height:1px; background: var(--border); margin: 22px 0; }
      footer{
        margin-top: 36px;
        padding-top: 18px;
        border-top: 1px solid var(--border);
        color: var(--muted);
        font-size: 13px;
        display:flex;
        gap: 10px;
        flex-wrap:wrap;
        justify-content:space-between;
        align-items:center;
      }
      .footLinks{ display:flex; gap: 12px; flex-wrap:wrap; }
      .footLinks a{ color: var(--muted); }
      .footLinks a:hover{ color: var(--text); text-decoration:none; }
    
      .homeSplit{display:grid;gap:18px;margin-top:22px}
      @media (min-width: 900px){.homeSplit{grid-template-columns: 1.1fr .9fr;align-items:start}}
      .chipRow{display:flex;flex-wrap:wrap;gap:10px}
      .chip small{font-size:11px;color:var(--muted);font-weight:800;background:rgba(2,6,23,.04);border:1px solid rgba(2,6,23,.06);padding:2px 8px;border-radius:999px}
      .ctaRow{display:flex;gap:16px;align-items:center;justify-content:space-between;flex-wrap:wrap}
      .ctaBtns{display:flex;gap:10px;flex-wrap:wrap}
      .ctaBtns .btn{min-width: 160px}
      .cardTitle{margin:0 0 6px; font-size:18px; letter-spacing:-.01em}
      .metaLine{display:flex;gap:10px;flex-wrap:wrap;color:var(--muted);font-size:12px;margin-top:10px}
      .metaLine a{color:color-mix(in srgb, var(--muted), var(--primary) 20%)}

    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="header">
        <a class="brand" href="/" aria-label="SHIOLAB トップへ">
          <div class="logo">S</div>
          <div class="siteTitle">SHIOLAB</div>
        </a>

        <nav class="nav" aria-label="グローバルナビ">
          <a href="/articles/">記事</a>
          <a href="/#categories">カテゴリ</a>
          <a class="cta" href="https://quiz.shiolab.co.jp/">クイズで確認</a>
        </nav>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer>
        <div class="footLinks">
          <a href="/privacy/">プライバシーポリシー</a>
          <a href="/terms/">利用規約</a>
          <a href="/disclaimer/">免責事項</a>
        </div>
        <div>© SHIOLAB</div>
      </footer>
    </div>
  </body>
</html>

